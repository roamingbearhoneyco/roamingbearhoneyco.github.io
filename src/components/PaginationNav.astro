---
interface PaginationProps {
  url: {
    current: string;
    prev?: string;
    next?: string;
  };
  currentPage: number;
  lastPage: number;
}

const { url, currentPage, lastPage } = Astro.props;
---
<nav class="flex items-center justify-center gap-4 text-sm text-[var(--color-text-secondary)]">
  {url.prev && (
    <a
      href={url.prev}
      class="px-4 py-2 border border-[var(--color-accent)] rounded-[var(--radius-md)] hover:bg-[var(--color-accent)]/10 transition-colors duration-300"
    >
      ← Previous
    </a>
  )}

  <span class="px-4 py-2 border border-[var(--color-accent)]/30 rounded-[var(--radius-md)] text-[var(--color-text-secondary)]/70">
    Page {currentPage} of {lastPage}
  </span>

  {url.next && (
    <a
      href={url.next}
      class="px-4 py-2 border border-[var(--color-accent)] rounded-[var(--radius-md)] hover:bg-[var(--color-accent)]/10 transition-colors duration-300"
    >
      Next →
    </a>
  )}
</nav>
