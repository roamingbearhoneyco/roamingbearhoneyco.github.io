---
interface Props {
  categoryList: string[];
}
const { categoryList } = Astro.props;
---

<aside class="bg-white/80 border backdrop-blur-md w-full rounded-2xl shadow-2xl md:p-4 mb-10 border-[#f5e7d0]">
  <h1 class="text-lg font-semibold mb-4">Explore Our Latest Content By Category</h1>
  <div class="flex flex-wrap gap-2">
    {categoryList.map((cat) => (
      <a
        href={`/blog/category/${cat.toLowerCase()}`}
        class="px-3 py-1 rounded-full text-sm font-medium bg-blue-400 text-yellow-800 hover:bg-yellow-200 transition"
      >
        #{cat}
      </a>
    ))}
  </div>
</aside>
