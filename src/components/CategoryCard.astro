---
interface Props {
  categoryList: string[];
}
const { categoryList } = Astro.props;
---

<aside class="card mb-10">
  <h1 class="text-lg font-semibold mb-4 text-[var(--color-text-primary)]">Explore Our Latest Content By Category</h1>
  <div class="flex flex-wrap gap-2">
    {categoryList.map((cat) => (
      <a
        href={`/blog/category/${cat.toLowerCase()}`}
        class="px-3 py-1 rounded-full text-sm font-medium bg-[var(--color-secondary)] text-[var(--color-text-light)] hover:bg-[var(--color-accent)] transition-colors duration-300"
      >
        #{cat}
      </a>
    ))}
  </div>
</aside>
