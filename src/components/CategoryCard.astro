---
interface Props {
  categoryList: string[];
}
const { categoryList } = Astro.props;
---

<aside class="bg-white border rounded-lg p-4 shadow-md">
  <h2 class="text-lg font-semibold mb-4">Categories</h2>
  <div class="flex flex-wrap gap-2">
    {categoryList.map((cat) => (
      <a
        href={`/blog/category/${cat.toLowerCase()}`}
        class="px-3 py-1 rounded-full text-sm font-medium bg-blue-400 text-yellow-800 hover:bg-yellow-200 transition"
      >
        #{cat}
      </a>
    ))}
  </div>
</aside>
