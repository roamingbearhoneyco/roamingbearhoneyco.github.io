---
interface Post {
  slug: string;
  title: string;
  description: string;
  image?: { src: string; alt: string };
  displayDate: string;
  author: string;
}

const { post } = Astro.props;
---
<li>
  <a
    href={`/blog/${post.slug}`}
    class="card block overflow-hidden transition-all duration-300 hover:scale-105"
  >
    {post.image && (
      <img
        src={post.image.src}
        alt={post.image.alt}
        class="w-full h-48 object-cover rounded-t-[var(--radius-2xl)]"
      />
    )}
    <div class="p-4">
      <h2 class="text-xl font-semibold mb-2 text-[var(--color-text-primary)]">{post.title}</h2>
      <div class="text-sm text-[var(--color-text-secondary)]/60 mb-2">
        <time>{post.displayDate}</time> &bull; <span>By {post.author}</span>
      </div>
      <p class="text-[var(--color-text-secondary)]">{post.description}</p>
    </div>
  </a>
</li>
