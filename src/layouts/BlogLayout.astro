---
// src/layouts/BlogLayout.astro

import Layout from './Layout.astro';
---
<Layout>
  <!-- Fixed Background Image Layer -->
  <div class="fixed inset-0 z-0 bg-center bg-cover" style="background-image: url('/assets/vintage-honeycomb-bg.jpg');"></div>

  <!-- Gradient Overlay Layer -->
  <div class="fixed inset-0 z-10 bg-gradient-to-b from-[var(--color-soft-amber)]/60 to-[var(--color-golden-honey)]/20"></div>

  <main class="relative z-20 container-responsive py-12 space-y-8">
    <slot name="heading" />
    <ul role="list" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <slot />
    </ul>
    
    <div class="hidden lg:block text-center text-[var(--color-text-secondary)] mt-4">
      <slot name="sidebar" />
    </div>

    <div class="mt-10 flex justify-center gap-4 text-sm text-[var(--color-text-secondary)]">
      <slot name="pagination" />
    </div>
  </main>
</Layout>