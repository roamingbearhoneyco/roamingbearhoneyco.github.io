---
import '../styles/global.css';
import UserAuth from '../components/UserAuth';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Roaming Bear Honey Co.', description } = Astro.props;
const fullTitle = title === 'Roaming Bear Honey Co.' ? title : `${title} | Roaming Bear Honey Co.`;
---
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{fullTitle}</title>
  {description && <meta name="description" content={description} />}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>

<body class="min-h-screen flex flex-col">

<header class="shrink-0 sticky top-0 bg-[var(--color-primary)] shadow-lg z-[var(--z-sticky)]">
  <div class="container-responsive py-3 flex justify-between items-center">
    <a href="/" class="flex items-center space-x-3 group">
      <span class="text-2xl font-bold text-[var(--color-text-light)] group-hover:text-[var(--color-accent)] transition-colors duration-300">
        Roaming Bear Honey Co.
      </span>
    </a>

    <!-- Desktop Nav + Auth, Mobile Auth only -->
    <div class="flex items-center gap-4 sm:gap-8">
      <nav class="hidden sm:flex space-x-3 sm:space-x-6 text-[var(--color-text-light)] font-medium">
        <a href="/" class="nav-link">Home</a>
        <a href="/about" class="nav-link">About</a>
        <a href="/blog/1" class="nav-link">Blog</a>
        <a href="/shop" class="nav-link">Shop</a>
      </nav>
      <div class="hidden sm:block">
        <UserAuth client:only="react" />
      </div>
    </div>

    <!-- Mobile Auth + Hamburger Toggle -->
    <div class="sm:hidden flex items-center gap-2">
      <UserAuth client:only="react" />
      <button id="menu-toggle" class="focus:outline-none text-[var(--color-text-light)] hover:text-[var(--color-accent)] transition-colors duration-300 ml-2">
        <svg
          id="menu-icon"
          class="w-6 h-6 transition-all duration-300 ease-in-out"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path id="line1" d="M3 6h18" />
          <path id="line2" d="M3 12h18" />
          <path id="line3" d="M3 18h18" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Nav -->
  <nav
    id="mobile-menu"
    class="sm:hidden hidden flex-col space-y-2 px-4 pb-4 text-[var(--color-text-light)] font-medium bg-[var(--color-primary)] shadow-lg transition-all duration-300 ease-in-out transform scale-y-0 origin-top"
  >
    <a href="/" class="nav-link py-2">Home</a>
    <a href="/about" class="nav-link py-2">About</a>
    <a href="/blog/1" class="nav-link py-2">Blog</a>
    <a href="/shop" class="nav-link py-2">Shop</a>
  </nav>
</header>

<main class="flex-1 p-0">
  <slot />
</main>

<footer class="shrink-0 relative z-[var(--z-sticky)] bg-[var(--color-background)]/95 backdrop-blur-sm py-10 px-4 mt-12 border-t border-[var(--color-accent)]/20">
  <div class="container-responsive space-y-8">
    <div class="flex flex-col gap-8 md:flex-row md:items-start md:justify-between">
      <!-- Brand + tagline -->
      <div class="space-y-3 max-w-sm">
        <a href="/" class="inline-flex items-center space-x-2 group">
          <span class="text-xl font-bold text-[var(--color-text-primary)] group-hover:text-[var(--color-secondary)] transition-colors duration-200">
            Roaming Bear Honey Co.
          </span>
        </a>
        <p class="text-sm text-[var(--color-text-secondary)]">
          Local. Sustainable. Wild-crafted honey from the forest to your table.
        </p>
        <p class="text-xs text-[var(--color-text-secondary)]/80">
          From our hives in Virginia to your home, one small-batch jar at a time.
        </p>
      </div>

      <!-- Footer navigation -->
      <div class="grid grid-cols-2 gap-8 text-sm sm:grid-cols-2">
        <div class="space-y-3">
          <h3 class="text-xs font-semibold tracking-[0.18em] text-[var(--color-text-secondary)] uppercase">
            Explore
          </h3>
          <div class="flex flex-col space-y-2">
            <a href="/" class="hover:text-[var(--color-secondary)] transition-colors duration-200">Home</a>
            <a href="/about" class="hover:text-[var(--color-secondary)] transition-colors duration-200">About</a>
            <a href="/blog/1" class="hover:text-[var(--color-secondary)] transition-colors duration-200">Blog</a>
            <a href="/shop" class="hover:text-[var(--color-secondary)] transition-colors duration-200">Shop</a>
          </div>
        </div>

        <div class="space-y-3">
          <h3 class="text-xs font-semibold tracking-[0.18em] text-[var(--color-text-secondary)] uppercase">
            Legal
          </h3>
          <div class="flex flex-col space-y-2">
            <a href="/privacy" class="hover:text-[var(--color-secondary)] transition-colors duration-200">Privacy Policy</a>
            <a href="/terms" class="hover:text-[var(--color-secondary)] transition-colors duration-200">Terms &amp; Conditions</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="flex flex-col gap-2 border-t border-[var(--color-accent)]/10 pt-4 md:flex-row md:items-center md:justify-between">
      <p class="text-xs text-[var(--color-text-secondary)]">
        Copyright &copy;
        <span id="copyright" class="text-[var(--color-secondary)]"></span>
        Roaming Bear Honey Co. &mdash; All rights reserved
      </p>
      <p class="text-xs text-[var(--color-text-secondary)]/80">
        Built with Astro, React &amp; Supabase Â· Hosted on GitHub Pages
      </p>
    </div>
  </div>
</footer>

</body>

<!-- Evergreen Copyright Year Script -->
<script is:inline>
  document.getElementById('copyright').textContent = new Date().getFullYear();
</script>

<!-- Tawk.to Chat Script -->
<script type="text/javascript" is:inline>
  var Tawk_API = Tawk_API || {}, Tawk_LoadStart = new Date();
  (function () {
    var s1 = document.createElement("script"),
      s0 = document.getElementsByTagName("script")[0];
    s1.async = true;
    s1.src = "https://embed.tawk.to/687d7873416fc119149cbe1f/1j0l1t0ni";
    s1.charset = "UTF-8";
    s1.setAttribute("crossorigin", "*");
    s0.parentNode.insertBefore(s1, s0);
  })();
</script>

<!-- Mobile Menu Toggle Script -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const line1 = document.getElementById('line1');
    const line2 = document.getElementById('line2');
    const line3 = document.getElementById('line3');

    if (!toggleButton || !mobileMenu || !line1 || !line2 || !line3) return;

    let isOpen = false;

    toggleButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      mobileMenu.classList.toggle('flex');
      mobileMenu.classList.toggle('scale-y-0');
      isOpen = !isOpen;

      if (isOpen) {
        line1.setAttribute('d', 'M4 4L20 20');
        line2.setAttribute('d', '');
        line3.setAttribute('d', 'M20 4L4 20');
      } else {
        line1.setAttribute('d', 'M3 6h18');
        line2.setAttribute('d', 'M3 12h18');
        line3.setAttribute('d', 'M3 18h18');
      }
    });
  });
</script>
