---
import '../styles/global.css';
---
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Roaming Bear Honey Co.</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>

<header class="sticky top-0 bg-[var(--color-primary)] shadow-lg z-[var(--z-sticky)]">
  <div class="container-responsive py-3 flex justify-between items-center">
    <a href="/" class="flex items-center space-x-3 group">
      <span class="text-2xl font-bold text-[var(--color-text-light)] group-hover:text-[var(--color-accent)] transition-colors duration-300">
        Roaming Bear Honey Co.
      </span>
    </a>

    <!-- Hamburger Toggle -->
    <button id="menu-toggle" class="sm:hidden focus:outline-none text-[var(--color-text-light)] hover:text-[var(--color-accent)] transition-colors duration-300">
      <svg
        id="menu-icon"
        class="w-6 h-6 transition-all duration-300 ease-in-out"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path id="line1" d="M3 6h18" />
        <path id="line2" d="M3 12h18" />
        <path id="line3" d="M3 18h18" />
      </svg>
    </button>

    <!-- Desktop Nav -->
    <nav class="hidden sm:flex space-x-3 sm:space-x-6 text-[var(--color-text-light)] font-medium">
      <a href="/" class="nav-link">Home</a>
      <a href="/about" class="nav-link">About</a>
      <a href="/blog/1" class="nav-link">Blog</a>
      <a href="/shop" class="nav-link">Shop</a>
      <a href="/portal" class="nav-link">Portal</a>
      <a href="/onboard" class="nav-link">Onboard</a>
    </nav>
  </div>

  <!-- Mobile Nav -->
  <nav
    id="mobile-menu"
    class="sm:hidden hidden flex-col space-y-2 px-4 pb-4 text-[var(--color-text-light)] font-medium bg-[var(--color-primary)] shadow-lg transition-all duration-300 ease-in-out transform scale-y-0 origin-top"
  >
    <a href="/" class="nav-link py-2">Home</a>
    <a href="/about" class="nav-link py-2">About</a>
    <a href="/blog/1" class="nav-link py-2">Blog</a>
    <a href="/shop" class="nav-link py-2">Shop</a>
    <a href="/portal" class="nav-link py-2">Portal</a>
    <a href="/onboard" class="nav-link py-2">Onboard</a>
  </nav>
</header>

<main class="p-0">
  <slot />
</main>

<footer class="relative z-[var(--z-sticky)] bg-[var(--color-background)] py-6 px-4 mt-12 border-t border-[var(--color-accent)]/20">
  <div class="container-responsive text-center">
    <p class="text-sm text-[var(--color-text-secondary)]">
      Copyright &copy; <span id="copyright" class="text-[var(--color-secondary)]"></span> Roaming Bear Honey Co. | All rights reserved
    </p>
    <p class="text-xs text-[var(--color-text-secondary)]/70 mt-2">
      Local. Sustainable. Wild-crafted honey from the forest to your table.
    </p>
  </div>
</footer>

<!-- Evergreen Copyright Year Script -->
<script is:inline>
  document.getElementById('copyright').textContent = new Date().getFullYear();
</script>

<!-- Tawk.to Chat Script -->
<script type="text/javascript" is:inline>
  var Tawk_API = Tawk_API || {}, Tawk_LoadStart = new Date();
  (function () {
    var s1 = document.createElement("script"),
      s0 = document.getElementsByTagName("script")[0];
    s1.async = true;
    s1.src = "https://embed.tawk.to/687d7873416fc119149cbe1f/1j0l1t0ni";
    s1.charset = "UTF-8";
    s1.setAttribute("crossorigin", "*");
    s0.parentNode.insertBefore(s1, s0);
  })();
</script>

<!-- Mobile Menu Toggle Script -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const line1 = document.getElementById('line1');
    const line2 = document.getElementById('line2');
    const line3 = document.getElementById('line3');

    if (!toggleButton || !mobileMenu || !line1 || !line2 || !line3) return;

    let isOpen = false;

    toggleButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      mobileMenu.classList.toggle('flex');
      mobileMenu.classList.toggle('scale-y-0');
      isOpen = !isOpen;

      if (isOpen) {
        line1.setAttribute('d', 'M4 4L20 20');
        line2.setAttribute('d', '');
        line3.setAttribute('d', 'M20 4L4 20');
      } else {
        line1.setAttribute('d', 'M3 6h18');
        line2.setAttribute('d', 'M3 12h18');
        line3.setAttribute('d', 'M3 18h18');
      }
    });
  });
</script>
