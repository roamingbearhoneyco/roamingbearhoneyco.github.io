---
import Layout from '../layouts/Layout.astro';
import DashboardClient from '../components/DashboardClient.tsx';
---

<Layout>
  <div class="fixed inset-0 z-0 bg-center bg-cover" style="background-image: url('/assets/comb.jpg');"></div>
  <div class="fixed inset-0 z-10 bg-gradient-to-b from-[var(--color-soft-amber)]/90 to-[var(--color-golden-honey)]/50"></div>

  <section class="relative z-20 pt-32 pb-20 px-4 text-center fade-in-up">
    <h1 class="hero-title !mb-2">
      Member Portal
    </h1>
    <p class="hero-subtitle text-black !max-w-xl mx-auto !mb-0">
      Welcome back to your Roaming Bear Honey Co. dashboard. 
      Manage your subscription and profile details below.
    </p>
  </section>

  <section class="relative z-30 px-4 sm:px-6 -mt-12 pb-20">
    <div class="container-responsive">
      <div class="max-w-2xl mx-auto">
        <DashboardClient client:only="react" />
      </div>
    </div>
  </section>
</Layout>