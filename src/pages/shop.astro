---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Fixed Background Image Layer -->
  <div class="fixed inset-0 z-0 bg-center bg-cover" style="background-image: url('/assets/rbhc-honey.png');"></div>

  <!-- Gradient Overlay Layer -->
  <div class="fixed inset-0 z-10 bg-gradient-to-b from-[var(--color-soft-amber)]/60 to-[var(--color-golden-honey)]/0"></div>

  <!-- Hero Section -->
  <section class="hero fade-in-up">
    <h1 class="hero-title text-gradient">
      Honey'ville U.S.A.
    </h1>
    <p class="hero-subtitle">
      Where wild honey meets community, conservation, and story.
    </p>
  </section>
</Layout>

<style>
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fadeInUp 1s ease-out forwards;
  }
</style>