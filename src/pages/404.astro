---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout>
  <div class="min-h-screen flex flex-col">
    <section class="relative w-full flex-grow overflow-hidden">
      <img 
        src="/assets/lost-bear.png"
        alt="Curious bear with a map"
        class="absolute inset-0 w-full h-full object-cover object-center sm:object-[center_top] z-0"
      />

      <div class="relative z-10 min-h-[150vh] flex flex-col items-center justify-center h-full px-6 text-center text-[#2c1c0f]">
        <h1 class="text-4xl sm:text-5xl font-bold text-[#ffffff] mb-4">
          Lost in the Meadow
        </h1>
        <p class="text-lg sm:text-xl max-w-xl text-[#ffffff] mb-8">
          Looks like this page has wandered off the path.... ğŸ
        </p>
        <a 
          href="/" 
          class="inline-block px-6 py-3 bg-[#d7af79] hover:bg-[#a05d35] text-white font-semibold rounded-lg shadow transition-colors duration-200"
        >
          Return to Hive
        </a>
      </div>
    </section>
  </div>
</Layout>

