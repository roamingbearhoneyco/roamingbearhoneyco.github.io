---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout>
  <div class="min-h-screen flex flex-col">
    <section class="relative w-full flex-grow overflow-hidden">
      <img 
        src="/assets/lost-bear.png"
        alt="Curious bear with a map"
        class="absolute inset-0 w-full h-full object-cover object-center sm:object-[center_top] z-0"
      />

      <div class="relative z-10 min-h-[150vh] flex flex-col items-center justify-center h-full px-6 text-center text-[var(--color-text-primary)]">
        <h1 class="text-4xl sm:text-5xl font-bold text-[var(--color-text-light)] mb-4">
          Lost in the Meadow
        </h1>
        <p class="text-lg sm:text-xl max-w-xl text-[var(--color-text-light)] mb-8">
          Looks like this page has wandered off the path.... ğŸ
        </p>
        <a 
          href="/" 
          class="btn btn-secondary"
        >
          Return to Hive
        </a>
      </div>
    </section>
  </div>
</Layout>

