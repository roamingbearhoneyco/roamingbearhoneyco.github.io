---
import Layout from "../layouts/Layout.astro";
import RegisterForm from "../components/RegisterForm.tsx";
---

<Layout title="Register">
  <section class="max-w-md mx-auto space-y-6">
    <h1 class="text-3xl font-bold text-[#19360e]">Create Your Account</h1>
    <p class="text-sm text-gray-700">
      Already part of the circle? 
      <a href="/signin" class="text-[#a05d35] hover:underline font-medium">
        Sign in
      </a>
    </p>

    <RegisterForm client:only="react" />
  </section>
</Layout>
