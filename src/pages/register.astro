---
import Layout from "../layouts/Layout.astro";
import RegisterForm from "../components/RegisterForm.tsx";
---

<Layout>
  <!-- Fixed Background Image Layer -->
  <div class="fixed inset-0 z-0 bg-center bg-cover" style="background-image: url('/assets/comb.jpg');"></div>

  <!-- Gradient Overlay Layer -->
  <div class="fixed inset-0 z-10 bg-gradient-to-b from-[var(--color-soft-amber)]/70 to-[var(--color-golden-honey)]/30"></div>

  <!-- Content Section -->
  <section class="relative z-20 section-spacing px-4 sm:px-6">
    <div class="container-responsive">
      <div class="max-w-md mx-auto">
        <div class="card text-center mb-8">
          <h1 class="text-3xl font-bold text-[var(--color-text-primary)] mb-2">Create Your Account</h1>
          <p class="text-[var(--color-text-secondary)]">
            Already part of the circle? 
            <a href="/signin" class="text-[var(--color-secondary)] hover:text-[var(--color-accent)] font-medium transition-colors duration-300">
              Sign in
            </a>
          </p>
        </div>

        <div class="card card-grow-in max-w-md mx-auto space-y-6">
        <RegisterForm client:only="react" />
        </div>
      </div>
    </div>
  </section>
</Layout>
